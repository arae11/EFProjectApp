<Window x:Class="BenchmarkWPF.RegisterUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BenchmarkWPF"
        mc:Ignorable="d"
        Title="RegisterUser" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <TextBox x:Name="userNameField" 
                 Grid.Row="2" 
                 Grid.RowSpan="1" 
                 Grid.Column="3" 
                 Grid.ColumnSpan="6" 
                 FontSize="36" 
                 TextAlignment="Center" 
                 HorizontalContentAlignment="Center"
                 VerticalContentAlignment="Center"
                 Background="#FFDCD0D0" 
                 TextChanged="tbxUserName_TextChanged"/>
        <PasswordBox x:Name="passWordField" 
                 Grid.Row="5" 
                 Grid.RowSpan="1" 
                 Grid.Column="3" 
                 Grid.ColumnSpan="6" 
                 FontSize="36" 
                 HorizontalContentAlignment="Center"
                 VerticalContentAlignment="Center"
                 Background="#FFDCD0D0" 
                 PasswordChanged="tbxPassword_TextChanged"/>
        <PasswordBox x:Name="repeatPasswordField" 
                 Grid.Row="8" 
                 Grid.RowSpan="1" 
                 Grid.Column="3" 
                 Grid.ColumnSpan="6" 
                 FontSize="36" 
                 HorizontalContentAlignment="Center"
                 VerticalContentAlignment="Center"
                 Background="#FFDCD0D0" 
                 PasswordChanged="tbxRepeatPassword_TextChanged"/>
        <Button x:Name="btnRegister" 
                Grid.Row="10" 
                Grid.Column="5" 
                Grid.ColumnSpan="2" 
                Background="#801515" 
                Content="Register" 
                Click="btnRegister_Click" FontFamily="TYPOGRAPH PRO" Foreground="White"/>
        <Button x:Name="btnBack" 
                Grid.Row="12" 
                Grid.Column="5" 
                Grid.ColumnSpan="2" 
                Background="#801515" 
                Content="Back" 
                Click="btnBack_Click" FontFamily="TYPOGRAPH PRO" Foreground="White"/>
    </Grid>
</Window>
